<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>notice</title>

    <!-- Custom fonts for this template-->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <!-- <link href="css/monitoring.css" rel="stylesheet" /> -->
    <link href="/css/register.css" rel="stylesheet" />
    <link href="/css/notice.css" rel="stylesheet" />
    <link href="/css/notice-write.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include ('inc/sidebar') %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <div class="container-fluid">
            <div class="row log-out">
              <a href="/logout"><span>로그아웃</span></a>
            </div>
            <div class="row content-header">
              <div class="col-8">
                <div class="row"><h2>공지사항</h2></div>
                <div class="row">TestSystem</div>
              </div>
              <div class="col-4">
                <div class="menu-info">HOME > 공지사항</div>
              </div>
            </div>
            <div class="row content-main">
              <div class="container p-2">
                <div class="row border-bottom-3 pl-3">
                  <h4>공지사항 수정</h4>
                </div>

                <div class="row pl-md-5 pt-4">
                  <form name="writeForm" class="w100" method="post">
                    <input
                      type="hidden"
                      id="notice"
                      name="notice"
                      value="<%=JSON.stringify(notice)%>"
                    />
                    <input type="hidden" name="idx" value="<%=notice.idx%>" />
                    <div class="container-fluid wrapper1 w-100">
                      <div class="row">
                        <div class="col-2">제목</div>
                        <div class="col-10">
                          <input
                            type="text"
                            name="title"
                            id=""
                            value="<%=notice.title%>"
                            class="w-100"
                            maxlength="180"
                          />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">작성자</div>
                        <div class="col-10">
                          <input
                            type="text"
                            name="write_name"
                            value="<%=write_name%>"
                            class="w-50"
                            readonly
                          />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">내용</div>
                        <div class="col-10">
                          <textarea
                            name="content"
                            id=""
                            cols="30"
                            rows="10"
                            maxlength="2999"
                          >
<%=notice.content%></textarea
                          >
                        </div>
                      </div>
                      <div class="row pt-5 pb-1">
                        <div class="col-6">등록일 <%=notice.insert_date%></div>
                        <div class="col-6">수정일 <%=notice.update_date%></div>
                      </div>
                      <div class="row pt-5 p-5">
                        <div class="col-6">
                          <button type="button" onclick="noticeSave()">
                            저장
                          </button>
                          <button type="button" onclick="noticeDel()">
                            삭제
                          </button>
                          <script></script>
                        </div>
                        <div class="col-6 right">
                          <button
                            type="button"
                            onclick="location.href='/notice'"
                          >
                            목록
                          </button>
                        </div>
                      </div>
                      <div class="row box center"></div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include ('inc/footer')%>

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <script src="/js/notice-detail.js"></script>
    <script src="/js/notice-edit.js"></script>

    <!-- my script -->
  </body>
</html>
