<!DOCTYPE html>

<!-- 
  필요한 변수
  write_name
  mode
 -->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>notice</title>

    <!-- Custom fonts for this template-->
    <link
      href="/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <!-- <link href="css/monitoring.css" rel="stylesheet" /> -->
    <link href="/css/register.css" rel="stylesheet" />
    <link href="/css/notice.css" rel="stylesheet" />
    <link href="/css/notice-write.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include ('inc/sidebar') %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <div class="container-fluid">
            <div class="row log-out">
              <a href="/logout"><span>로그아웃</span></a>
            </div>
            <div class="row content-header">
              <div class="col-8">
                <div class="row"><h2>공지사항</h2></div>
                <div class="row">TestSystem</div>
              </div>
              <div class="col-4">
                <div class="menu-info">HOME > 공지사항</div>
              </div>
            </div>
            <div class="row content-main">
              <div class="container p-2">
                <div class="row border-bottom-3 pl-3">
                  <h4>공지사항 신규</h4>
                </div>

                <div class="row pl-md-5 pt-4">
                  <form name="writeForm" class="w100" method="post">
                    <div class="container-fluid wrapper1 w-100">
                      <div class="row">
                        <div class="col-2">제목</div>
                        <div class="col-10">
                          <input
                            type="text"
                            name="title"
                            id=""
                            value=""
                            class="w-100"
                            maxlength="180"
                          />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">작성자</div>
                        <div class="col-10">
                          <input
                            type="text"
                            name="write_name"
                            value="<%=write_name%>"
                            class="w-50"
                            readonly
                          />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-2">내용</div>
                        <div class="col-10">
                          <textarea
                            name="content"
                            id=""
                            cols="30"
                            rows="10"
                            maxlength="2999"
                          ></textarea>
                        </div>
                      </div>
                      <div class="row pt-5 pb-1">
                        <% if(!typeof mode){ %>
                        <div class="col-6">등록일</div>
                        <div class="col-6">수정일</div>
                        <% } %>
                      </div>
                      <div class="row pt-5 p-5">
                        <div class="col-6">
                          <button type="button" onclick="noticeSave()">
                            저장
                          </button>
                          <% if(!typeof mode){ %>
                          <button>삭제</button>

                          <% } %>
                        </div>
                        <div class="col-6 right">
                          <button type="button" onclick="window.history.back()">
                            뒤로가기
                          </button>
                        </div>
                      </div>
                      <div class="row box center"></div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include ('inc/footer')%>

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/notice-write.js"></script>

    <!-- my script -->
  </body>
</html>
